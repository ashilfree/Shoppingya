{% extends 'baseAr.html.twig' %}

{% block body %}

    <!--================Categories Banner Area =================-->
    <section class="solid_banner_area">
        <div class="container">
            <div class="solid_banner_inner">
                <h3>تسجيل</h3>
                <ul>
                    <li><a href="{{ path('home', { locale: 'ar'}) }}">الصفحة الرئيسية</a></li>
                    <li><a>تسجيل</a></li>
                </ul>
            </div>
        </div>
    </section>
    <!--================End Categories Banner Area =================-->

    <!--================login Area =================-->
    <section class="login_area p-t-100 p-b-100">
        <div class="container">
            <div class="login_inner">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="login_title">
                            <h2>إنشاء حساب</h2>
                            <p>اتبع الخطوات أدناه لإنشاء حساب بريد إلكتروني واستمتع بتجربة البريد الإلكتروني الرائعة.</p>
                        </div>
                        {% for message in app.flashes('success')  %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'login_form row justify-content-center'}}) }}
                        <form class="login_form row justify-content-center">
                            <div class="col-lg-6 form-group">
                                {{ form_row(form.fullName, {'attr': {'class': 'form-control', 'placeholder':'الاسم الكامل'}}) }}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder':'بريد إلكتروني'}}) }}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder':'اسم االمستخدم'}}) }}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder':'هاتف'}}) }}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{ form_row(form.password.first, {'attr': {'class': 'form-control', 'placeholder':'كلمة المرور'}}) }}
                            </div>
                            <div class="col-lg-6 form-group">
                                {{ form_row(form.password.second, {'attr': {'class': 'form-control', 'placeholder':'إعادة كلمة المرور'}}) }}
                            </div>
                            <div class="col-lg-6 form-group">
                                <button type="submit" value="submit" class="btn subs_btn w-full">سجل الان</button>
                            </div>
                            {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End login Area =================-->

{% endblock %}



