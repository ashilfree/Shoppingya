{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}

    <!-- Slider -->
    <section class="section-slide">
        <div class="wrap-slick1">
            <div class="slick1">
                {{ include('home/slides.html.twig') }}
            </div>
        </div>
    </section>

    <!-- Product -->
    <section class="sec-product bg0 p-t-100 p-b-50">
        <div class="container">
            <div class="p-b-32">
                <h3 class="ltext-105 cl5 txt-center respon1">
                    Store Overview
                </h3>
            </div>

            <!-- Tab01 -->
            <div class="tab01">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    {% for category in categories %}
                    <li class="nav-item p-b-10">
                        <a class="nav-link {% if loop.index == 1%} active {% endif %}" data-toggle="tab" href="#{{ category.name|lower }}" role="tab">{{ category.name|upper }}</a>
                    </li>
                    {% endfor %}
                </ul>

                <!-- Tab panes -->
                <div class="tab-content p-t-50">
                    {% for category in categories %}
                    <!-- - -->
                        <div class="tab-pane fade show {% if loop.index == 1%} active {% endif %}" id="{{ category.name|lower }}" role="tabpanel">
                        <!-- Slide2 -->
                        <div class="wrap-slick2">
                            <div class="slick2">
                                {% for product in category.products %}
                                    {%  set desc = product.description|raw %}

                                    <div id="product-{{ product.id }}" class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-pic hov-img0">
                                            <img src="{{ vich_uploader_asset(product.images.first, 'imageFile') | imagine_filter('medium') }}"
                                                 alt="{{ product.name }}">

                                            <a href="#"
                                               class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1"
                                               data-id="{{ product.id }}"
                                               data-name="{{ product.name|upper }}"
                                               data-description="{{ desc|raw }}"
                                               data-price="{{ (product.price / 100) |number_format(2, '.', ',') }} KWD"
                                                    {% for catalog in  product.catalogs %} data-catalog{{ loop.index }}="{{ catalog.id }}" {% endfor %}
                                                    {% for catalog in  product.catalogs %} data-size{{ loop.index }}="{{ catalog.size }}" {% endfor %}
                                                    {% for image in  product.images %} data-image{{ loop.index }}="{{ image }}" {% endfor %}
                                               data-href-a ="{{ path('add.cart') }}"
                                            >
                                                Quick View
                                            </a>
                                        </div>

                                        <div class="block2-txt flex-w flex-t p-t-14">
                                            <div class="block2-txt-child1 flex-col-l ">
                                                <a href="{{ path('product', {'slug': product.slug }) }}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                    {{ product.name|upper }}
                                                </a>

                                                <span class="stext-105 cl3">
													{{ (product.price / 100) |number_format(2, '.', ',') }} KWD
												</span>
                                            </div>

                                            <div class="block2-txt-child2 flex-r p-t-3">
                                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                                    <img class="icon-heart1 dis-block trans-04" src="{{ '/media/images/icons/icon-heart-01.png' }}" alt="ICON">
                                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="{{ '/media/images/icons/icon-heart-02.png' }}" alt="ICON">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>


    <!-- Modal1 -->
    {% include 'modal1.html.twig' %}
{% endblock %}