{% extends 'base.html.twig' %}

{% block body %}

    <!--================Categories Banner Area =================-->
    <section class="solid_banner_area">
        <div class="container">
            <div class="solid_banner_inner">
                <h3>Cart</h3>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a>Shopping Cart</a></li>
                </ul>
            </div>
        </div>
    </section>
    <!--================End Categories Banner Area =================-->

    <div class="row row-pb-md  justify-content-center p-t-75">
        <div class="col-md-10">
            <div class="process-wrap">
                <div class="process text-center active">
                    <p><span>01</span></p>
                    <h3>Shopping Cart</h3>
                </div>
                <div class="process text-center">
                    <p><span>02</span></p>
                    <h3>Checkout</h3>
                </div>
                <div class="process text-center">
                    <p><span>03</span></p>
                    <h3>Order Complete</h3>
                </div>
            </div>
        </div>
    </div>
    <!-- Shoping Cart -->
    <form class="bg0 p-t-75 p-b-85 js-cart-form" action="{{ path('update.cart')}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-8 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                            <div class="wrap-table-shopping-cart">
                                <table class="table-shopping-cart">
                                    <tr class="table_head">
                                        <th class="column-1">Product</th>
                                        <th class="column-2"></th>
                                        <th class="column-3">Price</th>
                                        <th class="column-4">Quantity</th>
                                        <th class="column-5">Total</th>
                                    </tr>
                                    {% set total = null %}
                                    {% if cart %}
                                        {% for cartItem in cart %}
                                            <tr class="table_row">
                                                <td class="column-1">
                                                    <a href="{{ path('delete.cart', {id: cartItem.catalog.id, route:page}) }}">
                                                        <div class="how-itemcart1">
                                                            <img src="{{ vich_uploader_asset(cartItem.catalog.product.images.first, 'imageFile') | imagine_filter('small') }} "
                                                                 alt="{{ cartItem.catalog.product.name }}">
                                                        </div>
                                                    </a>
                                                </td>
                                                <td class="column-2">{{ cartItem.catalog.product.name|upper }} <br> Size {{ cartItem.catalog.size }} </td>
                                                <td class="column-3">
                                                    {% if cartItem.catalog.product.discountPrice != null %}
                                                        {{ (cartItem.catalog.product.discountPrice / 100) |number_format(2, '.', ',') }} {{ currency }}
                                                    {% else %}
                                                        {{ (cartItem.catalog.product.price / 100) |number_format(2, '.', ',') }} {{ currency }}
                                                    {% endif %}
                                                </td>
                                                <td class="column-4">
                                                    <input type="hidden" name="catalog-{{ loop.index }}" value="{{ cartItem.catalog.id }}">
                                                    <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m js-minus">
                                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                                        </div>
                                                        <input class="mtext-104 cl3 txt-center num-product"
                                                               type="number"
                                                               name="quantity-{{ loop.index }}" value="{{ cartItem.quantity }}">
                                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m js-plus"
                                                             data-max="{{ cartItem.catalog.quantity }}">
                                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="column-5">
                                                    <span>
                                                        {% if cartItem.catalog.product.discountPrice != null %}
                                                        {{ (cartItem.catalog.product.discountPrice * cartItem.quantity  / 100) |number_format(2, '.', ',') }}</span>{{ currency }}
                                        {% else %}
                                            {{ (cartItem.catalog.product.price * cartItem.quantity  / 100) |number_format(2, '.', ',') }}</span>{{ currency }}
                                                    {% endif %}
                                                </td>
                                            </tr>
                                            {% if cartItem.catalog.product.discountPrice != null %}
                                                {% set total = total + (cartItem.quantity * cartItem.catalog.product.discountPrice)/100 %}
                                            {% else %}
                                                {% set total = total + (cartItem.quantity * cartItem.catalog.product.price)/100 %}
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}

                                </table>
                            </div>

                            <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm text-right">
                                <div class="flex-w flex-m m-r-20 m-tb-5">
{#                                    <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text"#}
{#                                           name="coupon" placeholder="Coupon Code">#}

{#                                    <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5 js-apply-coupon">#}
{#                                        Apply coupon#}
{#                                    </div>#}
                                </div>
                                <div>
                                    <a href="{{ path('remove.cart', {route: page}) }}"
                                            class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                        Clear Cart
                                    </a>
                                </div>
                            </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-4 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm js-overlay"
                         style="position: relative;">
                        <!--  Overlay -->
                        {% include 'product/_overlay.html.twig' %}
                        <h4 class="mtext-109 cl2 p-b-30">
                            Cart Totals
                        </h4>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
								<span class="stext-110 cl2">
									Subtotal:
								</span>
                            </div>

                            <div class="size-209">
								<span id="subtotal" class="mtext-110 cl2">
									{{ total|number_format(2, '.', ',') }}
								</span>
                                {{ currency }}
                            </div>
                        </div>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									Shipping:
								</span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    Please double check your address, or contact us if you need any help.
                                </p>


                            </div>
                            <div class="p-t-15">
									<span class="stext-112 cl8">
										Calculate Shipping
									</span>
                                <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                    <select class="js-select2" name="delivery" required="required">
                                        <option value="">Select a region...</option>
                                        {% for governorate in governorates %}
                                            <option {% if delivery is defined and delivery == governorate.price  %}  selected {% endif %} value="{{ governorate.price }}">{{ governorate.name }}</option>
                                        {% endfor %}
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>

                                <div class="flex-w">
                                    <button type="submit"
                                            class="flex-c-m stext-101 cl2 size-115 bg8 bor13 hov-btn3 p-lr-15 trans-04">
                                        Update Totals
                                    </button>
                                </div>

                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27">
                            <div class="size-208">
								<span class="mtext-101 cl2">
									fees:
								</span>
                            </div>

                            <div class="size-209 p-t-1">
								<span id="total" class="mtext-110 cl2">
                                    {% if delivery is defined %}
                                        {{ (delivery/100)|number_format(2, '.', ',') }}
                                    {% else %}
									    0.00
                                    {% endif %}
								</span>
                                {{ currency }}
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-10 p-b-33">
                            <div class="size-208">
								<span class="mtext-101 cl2">
									Total:
								</span>
                            </div>

                            <div class="size-209 p-t-1">
								<span id="total" class="mtext-110 cl2">
                                    {% if delivery is defined %}
                                        {{ (total+ (delivery/100))|number_format(2, '.', ',') }}
                                    {% else %}
                                        {{ total|number_format(2, '.', ',') }}
                                    {% endif %}
								</span>
                                {{ currency }}
                            </div>
                        </div>

                        <a {% if delivery is null %} href="javascript:void(0)" {% else %} href="{{ path('order') }}" {% endif %}
                           class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04" {% if delivery is null %} disabled {% endif %}
                           data-toggle="tooltip" data-placement="top" title="Calculate Shipping">
                            Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>

{% endblock %}