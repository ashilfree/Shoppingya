<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock %}</title>
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="{{ '/media/images/icons/favicon.png' }}"/>

    {{ encore_entry_link_tags('app') }}

    {% block stylesheets %}{% endblock %}
    {% block javascript %}
    {% endblock %}
    <!--===============================================================================================-->
</head>
<body class="animsition js-body">

<!-- Header -->
<header {% if page is defined and page != 'home' %} class="header-v4" {% endif %}>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->
        <div class="top-bar">
            <div class="content-topbar flex-sb-m h-full container">
                <div class="left-top-bar">
                    Free delivery for standard order over 20 {{ currency }}
                </div>

                <div class="right-top-bar flex-w h-full">
                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        Help & FAQs
                    </a>

                    {% if app.user %}
                        <a href="{{ path('account', { locale: 'en' }) }}" class="flex-c-m trans-04 p-lr-25">
                            My Account
                        </a>
                    {% else %}
                        <a href="{{ path('register', { locale: 'en' }) }}" class="flex-c-m trans-04 p-lr-25">
                            Register
                        </a>
                    {% endif %}

                    <a href="{{ path('home', { locale: 'ar' }) }}" class="flex-c-m trans-04 p-lr-25">
                        AR
                    </a>

                    {% if app.user %}

                        <a href="{{ path('logout') }}" class="flex-c-m p-lr-10 trans-04">
                            {{ 'Hello ' ~ app.user.username }} {{ ' ' }}
                            <i class="fa fa-sign-out"></i>
                        </a>
                    {% else %}
                        <a href="{{ path('login', { locale: 'en' }) }}" class="flex-c-m p-lr-10 trans-04">

                            <i class="fa fa-sign-in"></i>
                        </a>
                    {% endif %}

                </div>
            </div>
        </div>

        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop container">

                <!-- Logo desktop -->
                <a href="{{ path('home', { locale: 'en' }) }}" class="logo">
                    <img src="{{ '/media/images/icons/logo-01.png' }}" width="140" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li {% if page is defined and page == 'home' %} class="active-menu" {% endif %}>
                            <a href="{{ path('home', { locale: 'en' }) }}">Home</a>
                        </li>

                        <li {% if page is defined and page == 'about.us' %} class="active-menu" {% endif %}>
                            <a href="{{ path('about.us', { locale: 'en' }) }}">About us</a>
                        </li>

                        <li {% if page is defined and page == 'products' %} class="active-menu" {% endif %}>
                            <a href="{{ path('products', { locale: 'en' }) }}">Categories</a>
                        </li>


                        <li {% if page is defined and page == 'contact.us' %} class="active-menu" {% endif %}>
                            <a href="{{ path('contact.us', { locale: 'en' }) }}">Contact us</a>
                        </li>
                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m js-panel-container">
                    {% include 'pages/desktop/search-icon.html.twig' %}

                    {% include 'pages/desktop/cart-icon.html.twig' %}

                    {% include 'pages/desktop/wish-list-icon.html.twig' %}
                </div>
            </nav>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="{{ path('home') }}"><img src="{{ '/media/images/icons/logo-01.png' }}" width="120" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
            {% include 'pages/mobile/search-icon.html.twig' %}

            {% include 'pages/mobile/cart-icon.html.twig' %}

            {% include 'pages/mobile/wish-list-icon.html.twig' %}
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="topbar-mobile">
            <li>
                <div class="left-top-bar">
                    Free delivery for standard order over 20 {{ currency }}
                </div>
            </li>

            <li>
                <div class="right-top-bar flex-w h-full">
                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        Help & FAQs
                    </a>

                    {% if app.user %}
                        <a href="{{ path('account', { locale: 'en' }) }}" class="flex-c-m p-lr-10 trans-04">
                            My Account
                        </a>
                    {% else %}
                        <a href="{{ path('register', { locale: 'en' }) }}" class="flex-c-m p-lr-10 trans-04">
                            Register
                        </a>
                    {% endif %}

                    <a href="{{ path('home' , { locale: 'ar' }) }}" class="flex-c-m p-lr-10 trans-04">
                        AR
                    </a>

                    {% if app.user %}

                        <a href="{{ path('logout') }}" class="flex-c-m p-lr-10 trans-04">
                            {{ 'Hello ' ~ app.user.username }} {{ ' ' }}
                            <i class="fa fa-sign-out"></i>
                        </a>
                    {% else %}
                        <a href="{{ path('login', { locale: 'en' }) }}" class="flex-c-m p-lr-10 p-t-5 trans-04">

                            <i class="fa fa-sign-in"></i>
                        </a>
                    {% endif %}

                </div>
            </li>
        </ul>

        <ul class="main-menu-m">
            <li>
                <a href="{{ path('home', { locale: 'en' }) }}">Home</a>
            </li>

            <li>
                <a href="{{ path('about.us', { locale: 'en' }) }}">About us</a>
            </li>

            <li>
                <a href="{{ path('products', { locale: 'en' }) }}">Categories</a>
            </li>

            <li>
                <a href="{{ path('contact.us', { locale: 'en' }) }}">Contact us</a>
            </li>
        </ul>
    </div>

    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="{{ '/media/images/icons/icon-close2.png' }}" alt="CLOSE">
            </button>

            <form class="wrap-search-header flex-w p-l-15">
                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" name="search" placeholder="Search...">
            </form>
        </div>
    </div>
</header>

<!-- Cart -->
<div class="wrap-header-cart js-panel-cart">
    <div class="s-full js-hide-cart"></div>

    <div class="header-cart flex-col-l p-l-65 p-r-25">
        <div class="header-cart-title flex-w flex-sb-m p-b-8">
				<span class="mtext-103 cl2">
					Your Cart
				</span>

            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
                <i class="zmdi zmdi-close"></i>
            </div>
        </div>
        {% set total = null %}
        <div class="header-cart-content align-content flex-w js-pscroll">
            {% if cart %}
                <ul class="header-cart-wrapitem w-full">
                    {% for cartItem in cart %}
                        <li class="header-cart-item flex-w flex-t m-b-12">
                            <a class="header-cart-item-img" href="{{ path('delete.cart', {id: cartItem.catalog.id, route:page}) }}">
                                <img src="{{ vich_uploader_asset(cartItem.catalog.product.images.first, 'imageFile') | imagine_filter('small') }} "
                                     alt="{{ cartItem.catalog.product.name }}">
                            </a>

                            <div class="header-cart-item-txt p-t-8">
                                <a href="{{ path('product', {'slug': cartItem.catalog.product.slug }) }}" class="header-cart-item-name m-b-6 hov-cl1 trans-04">
                                    {{ cartItem.catalog.product.name|upper }}
                                </a>
                                <span class="header-cart-item-info">
                                    {% if cartItem.catalog.product.discountPrice != null %}
								        {{ cartItem.quantity }} x {{ (cartItem.catalog.product.discountPrice / 100) |number_format(2, '.', ',') }} KWD
                                    {% else %}
                                        {{ cartItem.quantity }} x {{ (cartItem.catalog.product.price / 100) |number_format(2, '.', ',') }} KWD
                                    {% endif %}
							</span>
                                <span class="header-cart-item-info">
								Size: <b>{{ cartItem.catalog.size }}</b>
							</span>
                            </div>
                        </li>
                        {% if cartItem.catalog.product.discountPrice != null %}
                            {% set total = total + (cartItem.quantity * cartItem.catalog.product.discountPrice) %}
                        {% else %}
                            {% set total = total + (cartItem.quantity * cartItem.catalog.product.price) %}
                        {% endif %}
                    {% endfor %}
                </ul>
            {% else %}
                <img class="img-responsive" src="{{ '/media/images/waiting.png' }}" width=240 alt="ICON-PAY">

            {% endif %}
            <div class="w-full">
                <div class="header-cart-total w-full p-tb-40">
                    {% if cart %}
                        Total: {{ (total / 100)|number_format(2) }} {{ currency }}
                    {% else %}
                        <p><b>Cart empty</b></p>
                    {% endif %}
                </div>

                <div class="header-cart-buttons flex-w w-full">
                    <a  href="{{ path('cart') }}"
                            class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10" >
                        View Cart
                    </a>

                    <a {% if cart|length != 0 %} href="{{ path('remove.cart', {route: page}) }}" {% endif %}
                            class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10" {% if cart|length == 0 %} disabled="true" {% endif %}>
                        Clear List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Wish -->
<div class="wrap-header-cart js-panel-wish">
    <div class="s-full js-hide-wish"></div>

    <div class="header-cart flex-col-l p-l-65 p-r-25">
        <div class="header-cart-title flex-w flex-sb-m p-b-8">
                                <span class="mtext-103 cl2">
                                    Your WishList
                                </span>

            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-wish">
                <i class="zmdi zmdi-close"></i>
            </div>
        </div>
        <div class="header-cart-content flex-w js-pscroll">
            {% if wishlist %}
                <ul class="header-cart-wrapitem w-full">
                    {% for cartItem in wishlist %}
                        <li class="header-cart-item flex-w flex-t m-b-12">
                            <a class="header-cart-item-img" href="{{ path('delete.wishlist', {id: cartItem.product.id, route:page}) }}">
                                <img src="{{ vich_uploader_asset(cartItem.product.images.first, 'imageFile') | imagine_filter('small') }} "
                                     alt="{{ cartItem.product.name }}">
                            </a>

                            <div class="header-cart-item-txt p-t-8">
                                <a href="{{ path('product', {'slug': cartItem.product.slug }) }}" class="header-cart-item-name m-b-6 hov-cl1 trans-04">
                                    {{ cartItem.product.name|upper }}
                                </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <img class="img-responsive" src="{{ '/media/images/waiting.png' }}" width=240 alt="ICON-PAY">

            {% endif %}

            <div class="w-full">
                <div class="header-cart-buttons flex-w w-full align-items-center">
                    <a {% if wishlist|length != 0 %} href="{{ path('remove.wishlist', {route: page}) }}" {% endif %}
                            class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10" {% if wishlist|length == 0 %} disabled="true" {% endif %}>
                        Clear List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

