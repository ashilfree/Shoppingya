{% extends 'base.html.twig' %}

{% block body %}

<!--================Categories Banner Area =================-->
<section class="solid_banner_area">
    <div class="container">
        <div class="solid_banner_inner">
            <h3>My Account</h3>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="track.html">My Account</a></li>
            </ul>
        </div>
    </div>
</section>
<!--================End Categories Banner Area =================-->

<!--================login Area =================-->
<div class="p-all-40">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="dash">
            <div class="container">
                <div class="row">
                    {% include 'account/side_bar.html.twig' %}
                    <div class="col-lg-9 col-md-12">
                        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white">
                            <div class="dash__pad-2">
                                <h1 class="dash__h1 u-s-m-b-14">Edit Password</h1>

                                <span class="dash__text u-s-m-b-30">Looks like you haven't update your profile</span>
                                <div class="dash__link dash__link--secondary u-s-m-b-30">

                                    <div class="row">
                                        <div class="col-lg-12">
                                            {{ form_start(form, {'attr': {'class': 'dash-edit-p'}}) }}
                                            <div class="gl-inline">
                                                <div class="u-s-m-b-30">

                                                    <label class="gl-label" for="reg-fname">OLD PASSWORD *</label>
                                                    {{ form_row(form.old_password, {'attr': {'class': 'input-text input-text--primary-style', 'placeholder':'Old Password'}}) }}
                                                </div>
                                                <div class="u-s-m-b-30">

                                                    <label class="gl-label" for="reg-lname">NEW PASSWORD *</label>
                                                    {{ form_row(form.new_password.first, {'attr': {'class': 'input-text input-text--primary-style', 'placeholder':' New Password'}}) }}
                                                </div>
                                            </div>
                                            <div class="gl-inline">
                                                <div class="u-s-m-b-30">
                                                    <label class="gl-label" for="reg-fname">CONFIRM NEW PASSWORD
                                                        *</label>

                                                    {{ form_row(form.new_password.second, {'attr': {'class': 'input-text input-text--primary-style', 'placeholder':'Confirm New Password'}}) }}
                                                </div>
                                            </div>
                                            {{ form_row(form.submit, {'attr': {'class': 'btn btn--e-brand-b-2'}}) }}
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--================End login Area =================-->

    {% endblock %}