            <div class="dash">
                <div class="container">
                    <div class="row">
                        {% include 'account/side_bar.html.twig' %}
                        <div class="col-lg-9 col-md-12">
                            <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                                <div class="dash__pad-2">
                                    <h1 class="dash__h1 u-s-m-b-14">My Orders</h1>

                                    <span class="dash__text u-s-m-b-30">Here you can see all your orders</span>
                                    <div class="m-order__list">
                                        {% for order in orders %}
                                            <div class="m-order__get">
                                                <div class="manage-o__header u-s-m-b-30">
                                                    <div class="dash-l-r">
                                                        <div>
                                                            <div class="manage-o__text-2 u-c-secondary">Order
                                                                #{{ order.reference }}
                                                            </div>
                                                            <div class="manage-o__text u-c-silver">Placed
                                                                on {{ order.createdAt|date("F jS \\a\\t g:ia") }}

                                                            </div>
                                                        </div>
                                                        {% if order.status != 'canceled' %}
                                                        <div>
                                                            <div class="dash__link dash__link--brand">
                                                                <a href="{{ path('my.order.detail', {id:order.id}) }}">MORE DETAILS</a>
                                                            </div>
                                                        </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="text-right">

                                                    <span class="manage-o__badge badge--{{ order.status }}">{{ order.status|capitalize }}</span>
                                                </div>
                                                {% for orderDetail in order.orderDetails %}
                                                    <div class="manage-o__description">

                                                        <div class="description__container">
                                                            <div>
                                                                <span>{{ loop.index }}</span>
                                                            </div>
                                                            <div class="description-title">{{ orderDetail.product|upper }}
                                                            </div>
                                                        </div>
                                                        <div class="description__info-wrap">

                                                            <div>

                                                                <span class="manage-o__text-2 u-c-silver">Quantity:

                                                                    <span class="manage-o__text-2 u-c-secondary">{{ orderDetail.quantity }}</span></span>
                                                            </div>
                                                            <div>

                                                                <span class="manage-o__text-2 u-c-silver">Total Item:

                                                                    <span class="manage-o__text-2 u-c-secondary">{{ (orderDetail.total/100)|number_format(2, '.', ',') }} {{ currency }}</span> </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                                <div class="text-right m-t-20">

                                                                <span class="manage-o__text-2 u-c-silver">Delivery:

                                                                    <span class="manage-o__text-2 u-c-secondary">{{ ((order.deliveryPrice)/100)|number_format(2, '.', ',') }} {{ currency }}</span> </span>
                                                </div>
                                                <div class="text-right">

                                                                <span class="manage-o__text-2 u-c-silver">Total:

                                                                    <span class="manage-o__text-2 u-c-secondary">{{ ((order.total+order.deliveryPrice)/100)|number_format(2, '.', ',') }} {{ currency }}</span> </span>
