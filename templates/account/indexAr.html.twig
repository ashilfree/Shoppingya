{% extends 'baseAr.html.twig' %}

{% block body %}

    <!--================Categories Banner Area =================-->
    <section class="solid_banner_area">
        <div class="container">
            <div class="solid_banner_inner">
                <h3>حسابي</h3>
                <ul>
                    <li><a href="#">الصفحة الرئيسية</a></li>
                    <li><a>حسابي</a></li>
                </ul>
            </div>
        </div>
    </section>
    <!--================End Categories Banner Area =================-->

    <!--================login Area =================-->
    <div class="p-all-40">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="dash">
                <div class="container">
                    <div class="row">
                        {% include 'account/side_barAr.html.twig' %}
                        <div class="col-lg-9 col-md-12">
                            <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30 text-right">
                                <div class="dash__pad-2">
                                    <h1 class="dash__h1 u-s-m-b-14">ملفي الشخصي</h1>

                                    <span class="dash__text u-s-m-b-30">انظر إلى جميع معلوماتك ، يمكنك تخصيص ملفك الشخصي.</span>
                                    <div class="row">
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">الاسم بالكامل</h2>

                                            <span class="dash__text">{{ customer.fullName }}</span>
                                        </div>
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">بريد إلكتروني</h2>

                                            <span class="dash__text">{{ customer.email }}</span>
                                        </div>
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">هاتف</h2>

                                            <span class="dash__text">{{ customer.phone }}</span>
                                        </div>
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">اسم االمستخدم</h2>

                                            <span class="dash__text">{{ customer.username }}</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="dash__link dash__link--secondary u-s-m-b-30">

                                            <div class="u-s-m-b-16">

                                                <a class="dash__custom-link btn--e-transparent-brand-b-2" href="{{ path('edit.account', { locale: 'ar' }) }}">تعديل الملف الشخصي</a></div>
                                            <div>

                                                <a class="dash__custom-link btn--e-brand-b-2" href="{{ path('edit.password', { locale: 'ar' }) }}">تغيير كلمة المرور</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--================End login Area =================-->

{% endblock %}