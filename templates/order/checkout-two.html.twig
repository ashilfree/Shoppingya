{% extends 'base.html.twig' %}
{#{% block javascript %}#}
{#    <script src="https://js.stripe.com/v3/"></script>#}
{#{% endblock %}#}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
{% endblock %}
{% block body %}
{% set total = null %}
    {% for orderDetail in cart2order %}
     {% if orderDetail.catalog.product.discountPrice != 0 %}
        {% set total = total + ((orderDetail.quantity * orderDetail.catalog.product.discountPrice)) %}
        {% else %}
        {% set total = total + ((orderDetail.quantity * orderDetail.catalog.product.price)) %}
        {% endif %}
    {% endfor %}
    <!--================Categories Banner Area =================-->
    <section class="solid_banner_area">
        <div class="container">
            <div class="solid_banner_inner">
                <h3>Cart</h3>
                <ul>
                    <li><a href="{{ path('home', { locale: 'en' }) }}">Home</a></li>
                    <li><a>CheckOut</a></li>
                </ul>
            </div>
        </div>
    </section>
    <!--================End Categories Banner Area =================-->
    <div class="container js-checkout">
        <div class="row row-pb-md  justify-content-center p-t-75">
            <div class="col-md-10">
                <div class="process-wrap">
                    <div class="process text-center active">
                        <p><span>01</span></p>
                        <h3>Shopping Cart</h3>
                    </div>
                    <div class="process text-center active">
                        <p><span>02</span></p>
                        <h3>Checkout<br>Step Two</h3>
                    </div>
                    <div class="process text-center">
                        <p><span>03</span></p>
                        <h3>Order Complete</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- Check Out -->
        <section class="order_details p_120">
            <div class="container">
                <div class="row order_d_inner">
                    <div class="col-lg-4">
                        <div class="details_item">
                            <h4>Order Info</h4>
                            <ul class="list">
                                <li><a href="#"><span>Order number</span> : {{ order.reference }}</a></li>
                                <li><a href="#"><span>Date</span> : {{ order.createdAt|date("m/d/Y") }}</a></li>
                                <li><a href="#"><span>Total</span> : {{ (total + order.deliveryPrice)/100|number_format(2, '.', ',') ~ currency }}</a></li>
                                <li><a href="#"><span>Shipping Price</span> : {{ order.deliveryPrice/100|number_format(2, '.', ',') ~ currency }}</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="details_item">
                            <h4>Billing Info</h4>
                            <ul class="list">
                                <li><a href="#"><span>Name</span> : {{ order.shippingFullName }}</a></li>
                                <li><a href="#"><span>Email</span> : {{ order.shippingEmail }}</a></li>
                                <li><a href="#"><span>Phone </span> : {{ order.shippingPhone }}</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="details_item">
                            <h4>Billing Address</h4>
                            <ul class="list">
                                <li><a href="#"><span>Address</span> : {{ order.shippingAddress }}</a></li>
                                <li><a href="#"><span>City</span> : {{ order.shippingCity }}</a></li>
                                <li><a href="#"><span>Governorate</span> : {{ order.shippingProvince }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                 <div class="row">
                <div class="order_details_table col-md-8">
                    <h2>Order Details</h2>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Size</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for orderDetail in cart2order %}
                                <tr>
                                    <td>
                                        <p>{{ orderDetail.catalog.product.name|upper }}</p>
                                    </td>
                                    <td>
                                        <p>{{ orderDetail.catalog.size }}</p>
                                    </td>
                                    <td>
                                        <h5>x {{ orderDetail.quantity }}</h5>
                                    </td>
                                    <td>
                                        <p>
                                        {% if orderDetail.catalog.product.discountPrice != 0 %}
                                        {{ orderDetail.catalog.product.discountPrice * orderDetail.quantity /100|number_format(2, '.', ',') ~ currency }}
                                        {% else %}
                                         {{ orderDetail.catalog.product.price * orderDetail.quantity /100|number_format(2, '.', ',') ~ currency }}
                                        {% endif %}
                                        </p>
                                    </td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <td>
                                    <h4>Subtotal</h4>
                                </td>
                                <td>
                                    <h5></h5>
                                </td>
                                <td>
                                    <p>{{ (total)/100|number_format(2, '.', ',') ~ currency }}</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Delivery</h4>
                                </td>
                                <td>
                                    <h5></h5>
                                </td>
                                <td>
                                    <p>{{ (order.deliveryPrice)/100|number_format(2, '.', ',') ~ currency }}</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Total</h4>
                                </td>
                                <td>
                                    <h5></h5>
                                </td>
                                <td>
                                    <p>{{ (total + order.deliveryPrice)/100|number_format(2, '.', ',') ~ currency }}</p>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4 m-t-75">
                    {{ form_start(payment_method_form, {action: path('my.fatoorah.create.session', { id: order.id , locale: 'en' }), 'attr': {'onsubmit': 'setFormSubmitting()'}}) }}
                     <div class="p-t-15 p-all-30" style="background: #e5ecee;">
                        <span class="stext-112 cl8">
                            Payment Method
                        </span>
                         <div class="payment-type">

                             <div class="types flex justify-space-between">
                                 <div class="type type1 selected">
                                     <div class="logo">
                                         <i class="fas fa-handshake"></i>
                                     </div>
                                     <div class="text">
                                         <p>Pay on Delivery</p>
                                     </div>
                                 </div>
                                 <div class="type type2">
                                     <div class="logo">
                                         <i class="far fa-credit-card"></i>
                                     </div>
                                     <div class="text">
                                         <p>Pay with Credit Card</p>
                                     </div>
                                 </div>

                             </div>
                         </div>
                        <div class="select-wrapper m-b-15 m-t-15" style="display: none">

{#                            <select class="js-select2" name="payment" required="required">#}
{#                                <option value="">Select a payment method...</option>#}
{#                                {% for paymentMethod in paymentMethods %}#}
{#                                    <option#}

{#                                            value="{{ paymentMethod.id }}">{{ paymentMethod.name }}</option>#}
{#                                {% endfor %}#}
{#                            </select>#}
{#                            <div class="dropDownSelect2"></div>#}

                            {{ form_widget(payment_method_form.paymentMethod, {'attr': {'class': 'select', 'placeholder':'Choose a Credit Card *'}}) }}
                        </div>

                    </div>
                    {{ form_row(payment_method_form._token) }}
                        <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer m-t-30" data-id="{{ order.id }}" data-locale="{{ locale }}">
                            Place an order
                        </button>
                    {{ form_end(payment_method_form) }}
                        <a href="{{ path('order', { locale: 'en' }) }}" onclick="setFormSubmitting();" class="flex-c-m stext-101 cl2 size-119 w-full bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                            Back
                        </a>
                </div>
            </div>
        </div>
        </section>
    </div>

{% endblock %}

